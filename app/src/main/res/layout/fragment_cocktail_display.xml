<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cocktailDisplayFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CocktailDisplayFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/cocktailName" />

        <ImageView
            android:id="@+id/imgCocktailThumbnail"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="@string/cocktailThumbnail" />

        <TextView
            android:id="@+id/txtIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/cocktailIngredients" />

        <TextView
            android:id="@+id/txtRecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/cocktailRecipe" />

    </LinearLayout>

</FrameLayout>
